# ----------------------------
# 1) Imports
# ----------------------------
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from scipy import stats

# ----------------------------
# 2) Load Dataset
# ----------------------------
tmdb = pd.read_csv("tmdb_5000_movies.csv")

print("Rows:", tmdb.shape[0])
print("Columns:", tmdb.shape[1])
print("Columns:\n", tmdb.columns)
print("\nData Types:\n")
print(tmdb.dtypes)

# ----------------------------
# 3) Data Cleaning
# ----------------------------
tmdb = tmdb.drop_duplicates()

numeric_cols = [
    "budget", "revenue", "vote_average",
    "vote_count", "runtime", "popularity"
]

for col in numeric_cols:
    if col in tmdb.columns:
        tmdb[col] = pd.to_numeric(tmdb[col], errors="coerce")

tmdb["release_date"] = pd.to_datetime(tmdb["release_date"], errors="coerce")
tmdb["release_year"] = tmdb["release_date"].dt.year

tmdb = tmdb.dropna(subset=["budget", "revenue", "vote_average"])
tmdb = tmdb[(tmdb["budget"] > 0) & (tmdb["revenue"] > 0)].copy()

# ----------------------------
# 4) Feature Engineering
# ----------------------------
tmdb["profit"] = tmdb["revenue"] - tmdb["budget"]
tmdb["return_ratio"] = tmdb["revenue"] / tmdb["budget"]

# FIX: safe log transforms (NO runtime warning)
tmdb["log_budget"] = np.log1p(tmdb["budget"])
tmdb["log_revenue"] = np.log1p(tmdb["revenue"])

tmdb["profit_pos"] = tmdb["profit"].clip(lower=0)
tmdb["log_profit"] = np.log1p(tmdb["profit_pos"])

print("\nDataset shape after cleaning:", tmdb.shape)

# ----------------------------
# 5) Summary Statistics
# ----------------------------
tmdb[
    ["budget", "revenue", "profit", "return_ratio",
     "vote_average", "vote_count", "runtime", "popularity"]
].describe()

# ======================================================
# 6) Exploratory Data Analysis (EDA)
# ======================================================

# Budget distribution
plt.figure()
plt.hist(tmdb["log_budget"], bins=40)
plt.title("Distribution of log1p(Budget)")
plt.xlabel("log1p(budget)")
plt.ylabel("count")
plt.show()

# Revenue distribution
plt.figure()
plt.hist(tmdb["log_revenue"], bins=40)
plt.title("Distribution of log1p(Revenue)")
plt.xlabel("log1p(revenue)")
plt.ylabel("count")
plt.show()

# Rating distribution
plt.figure()
plt.hist(tmdb["vote_average"], bins=20)
plt.title("Distribution of Vote Average")
plt.xlabel("vote_average")
plt.ylabel("count")
plt.show()

# Budget vs Revenue
plt.figure()
plt.scatter(tmdb["log_budget"], tmdb["log_revenue"], s=10)
plt.title("log1p(Budget) vs log1p(Revenue)")
plt.xlabel("log1p(budget)")
plt.ylabel("log1p(revenue)")
plt.show()

# Budget vs Rating
plt.figure()
plt.scatter(tmdb["log_budget"], tmdb["vote_average"], s=10)
plt.title("log1p(Budget) vs Vote Average")
plt.xlabel("log1p(budget)")
plt.ylabel("vote_average")
plt.show()

# ======================================================
# 7) Hypothesis Testing
# ======================================================

# Test 1: Pearson correlation (Budget vs Revenue)
r1, p1 = stats.pearsonr(tmdb["log_budget"], tmdb["log_revenue"])
print("\nPearson(log_budget, log_revenue)")
print("r =", round(r1, 4), "p =", p1)

# Test 2: Pearson correlation (Budget vs Rating)
r2, p2 = stats.pearsonr(tmdb["log_budget"], tmdb["vote_average"])
print("\nPearson(log_budget, vote_average)")
print("r =", round(r2, 4), "p =", p2)

# Test 3: Welch t-test (High vs Low budget – Revenue)
median_budget = tmdb["budget"].median()

low_rev = tmdb[tmdb["budget"] <= median_budget]["log_revenue"]
high_rev = tmdb[tmdb["budget"] > median_budget]["log_revenue"]

t3, p3 = stats.ttest_ind(high_rev, low_rev, equal_var=False)

print("\nWelch t-test (High vs Low budget on Revenue)")
print("Median budget:", median_budget)
print("Low budget mean:", low_rev.mean())
print("High budget mean:", high_rev.mean())
print("t =", t3, "p =", p3)

# Test 4: Welch t-test (High vs Low budget – Rating)
low_rat = tmdb[tmdb["budget"] <= median_budget]["vote_average"]
high_rat = tmdb[tmdb["budget"] > median_budget]["vote_average"]

t4, p4 = stats.ttest_ind(high_rat, low_rat, equal_var=False)

print("\nWelch t-test (High vs Low budget on Rating)")
print("Low budget mean:", low_rat.mean())
print("High budget mean:", high_rat.mean())
print("t =", t4, "p =", p4)

# ----------------------------
# 8) Final Line
# ----------------------------
print("\nStage 2 completed successfully.")
